<%- include("../parts/head.ejs"); %>

<main>

    <div class="chat-box">
        <div class="chat-log">
            <% for (let i = chats.length - 1; i >= 0; i--) { %>
                <% let time = new Date(chats[i].date) %>
                <p>(<%= time.toLocaleTimeString('en-US') %>) : <%= chats[i].text %></p>
            <% }; %>
        </div>
        <form action="/chat" method="post">
            <input type="text" name="text" class="chat-entry">
            <input type="submit" value="Send" class="chat-send">
        </form>
    </div>

</main>

<script src="scripts/app.js"></script>

