    <% if (pov === "keep-swimming") { %>
        <p>
            Is something in the water?
        </p>
        <hr>
        <a href="/forest/pond/side/swim?pov=fight-fish">
            Keep Swimming
        </a>
        <a href="/forest/pond/side/swim?pov=out-of-pond">
