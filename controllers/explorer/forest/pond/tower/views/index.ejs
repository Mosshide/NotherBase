<main>
    <p>
        The tower stands before you, door locked.
    </p>
    <p id="extra"></p>
    <hr>
    <button id="knock">
        Knock on the Tower's Door
    </button>
    <% if (hasKey) { %>
        <a href="/forest/pond/tower/inside#1">
            Enter the Tower
        </a>
    <% } %>
