<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Wyatt's Minecraft Server</title>
    <meta name="viewport" content="width=device-width,initial-scale=1.0">
    <script src="https://code.jquery.com/jquery-3.6.0.min.js" integrity="sha256-/xUj+3OJU5yExlq6GSYGSHk7tPXikynS7ogEvDej/m4=" crossorigin="anonymous"></script>

    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Chakra+Petch&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css">
    <link rel="stylesheet" href="/styles/main.css">
</head>
<body>
    <main>
        <style>
            .monitor {
                width: 100%;
                height: 500px;
                background-color: black;
                display: flex;
                align-items: center;
                justify-content: center;
            }
        
            .screen {
                width: 95%;
                height: 90%;
                background-color: rgb(34, 34, 34);
                padding: 10px;
            }
        </style>
        
        <div class="monitor">
            <div class="screen">
                <p>Wyatt's Bedrock Minecraft Server</p>
                <p>Address: 73.11.150.171</p>
                <p>Port: 19132</p>
                <p id="status">Status: Offline</p>
                <p id="players">Players: 0</p>
            </div>
        </div>

        <script>
            $.post(`/forest/clearing/wyatts-house/basement/serve/mc-status`, function (data) {
                console.log(data);
                if (data.scriptResult.players) {
                    $("#status").text(`Status: Online`);
                    $("#players").text(`Players: ${data.scriptResult.players.online}`);
                }
            });
        </script>
    </main>
    <footer></footer>
</body>
</html>
