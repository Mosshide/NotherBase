<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Wyatt's Minecraft Server</title>
    <meta name="viewport" content="width=device-width,initial-scale=1.0">
    <script src="https://code.jquery.com/jquery-3.6.0.min.js" integrity="sha256-/xUj+3OJU5yExlq6GSYGSHk7tPXikynS7ogEvDej/m4=" crossorigin="anonymous"></script>

    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Chakra+Petch&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css">
    <link rel="stylesheet" href="/styles/main.css">
    <script src="/js/base.js"></script>
</head>
<body>
    <main>
        <style>
            .monitor {
                width: 100%;
                height: 500px;
                background-color: black;
                display: flex;
                align-items: center;
                justify-content: center;
            }
        
            .screen {
                width: 95%;
                height: 90%;
                background-color: rgb(34, 34, 34);
                padding: 10px;
            }
        </style>
        
        <div class="monitor">
            <div class="screen">
                <p>Wyatt's Java Minecraft Server (1.21)</p>
                <p>Address: mc.notherbase.com</p>
                <p>Local Address: 10.0.0.60</p>
                <p>Port: 25565</p>
                <p id="status">Status: Offline</p>
                <p id="players">Players: 0</p>
            </div>
        </div>

        <% if (query.scope == "local") { %>
            <a href="/mc">Internet Results</a>
        <% } else { %>
            <a href="/mc?scope=local">LAN Results</a>
        <% } %>

        <script>
            let base = new Base();
            let scope = "global";
            <% if (query.scope) { %>
                scope = "<%= query.scope %>";
            <% } %>

            base.do("mc-status", {
                route: "/pages/mc",
                scope
            }).then((res) => {
                if (res.data.status === "online") {
                    $("#status").text("Status: Online");
                    $("#players").text(`Players: ${res.data.online}/${res.data.max}`);
                }
            });
        </script>
    </main>
    <footer></footer>
</body>
</html>
