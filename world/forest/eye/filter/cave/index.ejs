</a>

<script src="/js/entity.js"></script>
<script>
    <%- include("./nono.js"); %>

    let lastPos = [0, 0];
    let moveNono = function moveNono() {
        let focus = $("#move-nono-spirit");
        let newPos = [Math.floor(Math.random() * 200), Math.floor(Math.random() * 100)];

        focus.animate({
            left: newPos[0],
            top: newPos[1],
        }, 2000);

        lastPos = newPos;
    };
    moveNono();
    setInterval(moveNono, 2000);
</script>