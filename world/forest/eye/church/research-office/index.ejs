<script>   
    const bibleViewer = new BibleViewer();
    bibleViewer.render();

    const metaResearch = new MetaBrowser({
        header: "Bible Research",
        id: "bible-research",
        useBrowser: TreeBrowser
    });
    metaResearch.render();
    metaResearch.addService("bible-notes", {
        fields: new NBField({
            name: "note-node",
            placeholder: "No Info"
        }, [
            new NBField({
                name: "name",
                placeholder: "No Name",
                label: "Name: ",
                type: "string"
            }),
            new NBField({
                name: "description",
                placeholder: "No Description",
                label: "Description: ",
                type: "long-string",
                multiple: true
            })
        ]),
        editable: true,
        multiple: true,
        toLoad: async () => {
            return await base.loadAll("bible-notes");
        },
        toSave: async (item, deleting) => {
            return await base.do("save-bible-note", { item, deleting });
        }
    });
</script>