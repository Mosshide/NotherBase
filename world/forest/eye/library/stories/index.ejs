</a>

<script src="/js/util/element.js"></script>
<script src="/js/util/buttons.js"></script>
<script src="/js/util/search-box.js"></script>
<script src="/js/util/browser.js"></script>
<script src="/js/entity.js"></script>
<script src="/js/floatable.js"></script>
<script>
    const metaBrowser = new MetaBrowser({
        header: "Your Stories"
    });
    metaBrowser.addService("stories", {
        fields: new NBField({
            name: "story",
            label: "Story: ",
            placeholder: "No Story"
        }, [
            new NBField({
                name: "title",
                label: "Title: ",
                placeholder: "Story Title",
                type: "string"
            }),
            new NBField({
                name: "img",
                label: "Image: ",
                placeholder: "/img/food/default.jpg",
                type: "image"
            }),
            new NBField({
                name: "source",
                label: "Source: ",
                placeholder: "Recipe Name",
                type: "string"
            }),
            new NBField({
                name: "content",
                label: "Content: ",
                placeholder: "Recipe Name",
                type: "long-string"
            })
        ]),
        label: "Story:",
        editable: true,
        multiple: true,
        toLoad: async () => {
            return await base.load("stories");
        },
        toSave: async (item, which, deleting) => {
            await base.do("save-story", { item, which, deleting });
        }
    });
    metaBrowser.render();

    const floatBoard = new FloatBoard();
</script>