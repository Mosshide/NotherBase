<script>
    const metaBrowser = new MetaBrowser({
        header: "Your Projects"
    });
    metaBrowser.addService("projects", {
        fields: new NBField({
            name: "projects",
            placeholder: "No Projects",
            label: "Project: "
        }, [
            new NBField({
                name: "name",
                placeholder: "No Name",
                label: "Name: ",
                type: "string"
            }),
            new NBField({
                name: "description",
                placeholder: "No Description",
                label: "Description: ",
                type: "long-string"
            }),
            new NBField({
                name: "task",
                placeholder: "No Tasks",
                label: "Tasks: ",
                multiple: true
            }, [
                new NBField({
                    name: "name",
                    placeholder: "No Task Name",
                    label: "Task: ",
                    type: "string"
                }),
                new NBField({
                    name: "description",
                    placeholder: "No Description",
                    label: "Description: ",
                    type: "long-string"
                }),
                new NBField({
                    name: "completed",
                    placeholder: false,
                    label: "Completed: ",
                    type: "boolean"
                }),
            ]),
            new NBField({
                name: "resources",
                placeholder: "No External Resources",
                label: "External Resources: ",
                multiple: true,
                type: "string"
            }),
            new NBField({
                name: "notes",
                placeholder: "No Notes",
                label: "Notes: ",
                type: "long-string"
            }),
        ]),
        editable: true,
        multiple: true,
        toLoad: async () => {
            return await base.load("projects");
        },
        toSave: async (item, which, deleting) => {
            await base.do("save-project", { item, which, deleting });
        }
    });
    metaBrowser.render();

    const floatBoard = new FloatBoard();
</script>